{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["@rocketseat/eslint-config/react"],
  "plugins": ["import-helpers"],
  "rules": {
    "camelcase": "off",
    "import/prefer-default-export": "off",
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          ["/^react/", "/^next/"],
          ["module", "absolute"],
          ["parent", "sibling", "index"]
        ],
        "alphabetize": { "order": "asc", "ignoreCase": true }
      }
    ]
  }
}
